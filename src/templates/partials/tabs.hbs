<div class="tabs tabs--bubble">
  {{#each sections}}
      <input id="{{id}}-visible"
             type="radio"
             name="tabs"{{#if @first}} checked{{/if}}>{{/each}}
  {{#with header}}<h2>{{#with title}}{{.}}{{/with}}</h2>{{/with}}
    <menu>
      {{#each sections}}
          <label for="{{id}}-visible">What is love</label>{{/each}}
    </menu>
  {{#each sections}}
      <section>
          <figure id="{{id}}" class="hero">
              <span class="image"></span>
              <label></label>
            {{#with caption}}
                <figcaption>
                  {{#with title}}<span class="title">{{.}}</span>{{/with}}
                  {{#with detail}}<span class="detail">{{.}}</span>{{/with}}
                  {{#with button}}<span class="button">{{.}}</span>{{/with}}
                </figcaption>
            {{/with}}
          </figure>
      </section>
  {{/each}}
</div>